<h1>
  List of all directors
</h1>

<form action="/insert_director_record" method="post">
  <div>
    <label for="name_field">Name</label>
    <input type="text" name="director_name" id="name_field">
  </div>

  <div>
    <label for="dob_field">Dob</label>
    <input type="date" name="director_dob" id="dob_field">
  </div>

  <div>
    <label for="bio_field">Bio</label>
    <input type="text" name="director_bio" id="bio_field">
  </div>

  <div>
    <label for="description_field">Description</label>
    <textarea name="director_description" id="description_field" rows="3"></textarea>
  </div>

  <div>
    <label for="image_field">Image</label>
    <input type="text" name="director_image" id="image_field">
  </div>

  <!--<div>
    <label for="director_id_field">Director ID</label>
    <input type="text" name="director_director_id" id="director_id_field">
  </div>-->

  <button>
    Create director
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
