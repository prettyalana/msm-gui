<h1>
  Director #<%= @the_director.id %> details
</h1>

<a href="/directors">
  Go back
</a>

<div>
  <a href="/delete_director/<%= @the_director.id %>">Delete actor</a>
</div>

<hr>

<hr>

<form action="/modify_director_record/<%= @the_director.id %>" method="post">
  <div>
    <label for="name_field">Name</label>
    <input type="text" name="director_name" id="name_field" value="<%=@the_director.name%>">
  </div>

  <div>
    <label for="dob_field">Dob</label>
    <input type="date" name="director_dob" id="dob_field" value="<%=@the_director.dob%>">
  </div>

  <div>
    <label for="bio_field">Bio</label>
    <textarea name="director_bio" id="bio_field" rows="3"></textarea>
  </div>

  <div>
    <label for="image_field">Image</label>
    <input type="text" name="director_image" id="image_field" value="<%=@the_director.image%>">
  </div>

  <!--<div>
    <label for="director_id_field">Director ID</label>
    <input type="text" name="director_director_id" id="director_id_field" value="<%#=@the_director.director_id%>">
  </div>-->

  <button>Update director</button>
</form>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% the_id = @the_director.id %>

  <% matching_movies = Movie.where({ :director_id => the_id }) %>
  
  <% films = matching_movies.order({ :year => :asc }) %>

  <% films.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <%= @the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
